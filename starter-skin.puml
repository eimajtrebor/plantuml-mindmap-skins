@startuml "starter-skin"

!define DEFAULT_FONT_SIZE 14
!define DEFAULT_LINE_THICKNESS 1
!define DEFAULT_LINE_COLOR #333333
!define DEFAULT_BOX_SHADOWING 1
!define DEFAULT_BACKGROUND_COLOR LightYellow

!if (%not(%variable_exists("$NODE_FONT_SIZE")))
    !$NODE_FONT_SIZE = DEFAULT_FONT_SIZE
!endif

!if (%not(%variable_exists("$ROOT_BACKGROUND_COLOR")))
    !$ROOT_BACKGROUND_COLOR = DEFAULT_BACKGROUND_COLOR
!endif

!if (%not(%variable_exists("$DEPTH1_BACKGROUND_COLOR")))
    !$DEPTH1_BACKGROUND_COLOR = DEFAULT_BACKGROUND_COLOR
!endif

!if (%not(%variable_exists("$DEPTH2_BACKGROUND_COLOR")))
    !$DEPTH2_BACKGROUND_COLOR = DEFAULT_BACKGROUND_COLOR
!endif

!if (%not(%variable_exists("$DEPTH3_BACKGROUND_COLOR")))
    !$DEPTH3_BACKGROUND_COLOR = DEFAULT_BACKGROUND_COLOR
!endif

!if (%not(%variable_exists("$LINE_THICKNESS")))
    !$LINE_THICKNESS = DEFAULT_LINE_THICKNESS
!endif

!if (%not(%variable_exists("$LINE_COLOR")))
    !$LINE_COLOR = DEFAULT_LINE_COLOR
!endif

!if (%not(%variable_exists("$SHADOWING")))
    !$SHADOWING = DEFAULT_SHADOWING
!endif

!procedure arrow_style()
    LineThickness $LINE_THICKNESS
    LineColor $LINE_COLOR
!endprocedure

!procedure root_style()
    BackgroundColor $ROOT_BACKGROUND_COLOR
!endprocedure

!procedure depth1_style()
    BackgroundColor $DEPTH1_BACKGROUND_COLOR
!endprocedure

!procedure depth2_style()
    BackgroundColor $DEPTH2_BACKGROUND_COLOR
!endprocedure

!procedure depth3_style()
    BackgroundColor $DEPTH3_BACKGROUND_COLOR
!endprocedure

<style>
mindmapDiagram {
    node {
        FontSize $NODE_FONT_SIZE
        Shadowing $SHADOWING
    }
    rootNode {
        root_style()
    }
    :depth(1) {
        depth1_style()
    }
    :depth(2) {
        depth2_style()
    } 
    :depth(3) {
        depth3_style()
    }
    arrow {
        arrow_style()
    }
}
</style>
@enduml
